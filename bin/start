#!/bin/bash
# ===================================================================
# ShikshaSetu - Full Application Startup
# Starts Backend, Frontend, and AI/ML Pipeline (Celery)
# ===================================================================

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
MAGENTA='\033[0;35m'
CYAN='\033[0;36m'
NC='\033[0m'

# PID directory
PID_DIR="/tmp/shiksha_setu"
mkdir -p "$PID_DIR"

print_header() {
    echo ""
    echo "======================================================================"
    echo -e "  ${MAGENTA}$1${NC}"
    echo "======================================================================"
    echo ""
}

print_status() { echo -e "${GREEN}âœ“${NC} $1"; }
print_error() { echo -e "${RED}âœ—${NC} $1"; }
print_info() { echo -e "${BLUE}â„¹${NC} $1"; }
print_warning() { echo -e "${YELLOW}âš ${NC} $1"; }
print_service() { echo -e "${CYAN}â†’${NC} $1"; }

cleanup() {
    print_header "ðŸ›‘ Stopping All Services"
    
    [ -f "$PID_DIR/backend.pid" ] && kill $(cat "$PID_DIR/backend.pid") 2>/dev/null && rm -f "$PID_DIR/backend.pid"
    [ -f "$PID_DIR/celery.pid" ] && kill $(cat "$PID_DIR/celery.pid") 2>/dev/null && rm -f "$PID_DIR/celery.pid"
    [ -f "$PID_DIR/frontend.pid" ] && kill $(cat "$PID_DIR/frontend.pid") 2>/dev/null && rm -f "$PID_DIR/frontend.pid"
    
    print_status "All services stopped"
    exit 0
}

trap cleanup INT TERM

if [ ! -f "requirements.txt" ]; then
    print_error "Run from project root directory"
    exit 1
fi

print_header "ðŸš€ SHIKSHA SETU - FULL STARTUP"

# ===================================================================
# Pre-flight Checks
# ===================================================================
print_header "Pre-flight Checks"

# Python
if ! command -v python3 &> /dev/null; then
    print_error "Python 3 not found"
    exit 1
fi
print_status "Python $(python3 --version | cut -d' ' -f2)"

# Node.js
if ! command -v node &> /dev/null; then
    print_error "Node.js not found"
    exit 1
fi
print_status "Node.js $(node --version)"

# Redis
if ! redis-cli ping &> /dev/null 2>&1; then
    print_warning "Redis not running. Starting..."
    if command -v brew &> /dev/null; then
        brew services start redis
        sleep 2
    else
        print_error "Start Redis manually: redis-server"
        exit 1
    fi
fi
print_status "Redis running"

# Virtual environment
if [ ! -d ".venv" ]; then
    print_error "Virtual environment not found. Run: ./1-setup.sh"
    exit 1
fi
print_status "Virtual environment ready"

# .env file
if [ ! -f ".env" ]; then
    print_error ".env not found. Run: ./1-setup.sh"
    exit 1
fi
print_status ".env configured"

# Frontend
if [ ! -d "frontend/node_modules" ]; then
    print_warning "Frontend dependencies missing. Installing..."
    cd frontend && npm install && cd ..
fi
print_status "Frontend ready"

# ===================================================================
# Create logs directory
# ===================================================================
mkdir -p logs

# ===================================================================
# Start Services
# ===================================================================
print_header "Starting All Services"

export $(cat .env | grep -v '^#' | xargs)

# 1. Backend API
print_service "Starting Backend API (FastAPI)..."
source .venv/bin/activate
nohup uvicorn backend.api.main:app --host 0.0.0.0 --port 8000 --reload > logs/backend.log 2>&1 &
BACKEND_PID=$!
echo $BACKEND_PID > "$PID_DIR/backend.pid"
print_status "Backend started (PID: $BACKEND_PID)"
sleep 3

# Health check
if curl -s http://localhost:8000/health > /dev/null 2>&1; then
    print_status "Backend health check passed"
else
    print_warning "Backend health check failed (still starting...)"
fi

# 2. AI/ML Pipeline (Celery Worker)
print_service "Starting AI/ML Pipeline (Celery)..."
nohup celery -A backend.tasks.celery_app worker --loglevel=info --concurrency=2 --queues=default,pipeline,ocr > logs/celery.log 2>&1 &
CELERY_PID=$!
echo $CELERY_PID > "$PID_DIR/celery.pid"
print_status "AI/ML Pipeline started (PID: $CELERY_PID)"
sleep 2

# 3. Frontend
print_service "Starting Frontend (React + Vite)..."
cd frontend
nohup npm run dev > ../logs/frontend.log 2>&1 &
FRONTEND_PID=$!
echo $FRONTEND_PID > "$PID_DIR/frontend.pid"
cd ..
print_status "Frontend started (PID: $FRONTEND_PID)"
sleep 3

# ===================================================================
# Status Check
# ===================================================================
print_header "ðŸ“Š Service Status"

if curl -s http://localhost:8000/health > /dev/null 2>&1; then
    echo -e "${GREEN}âœ“${NC} Backend:      ${GREEN}RUNNING${NC} - http://localhost:8000"
else
    echo -e "${YELLOW}âš ${NC} Backend:      ${YELLOW}STARTING${NC} - Wait a moment (check logs/backend.log)"
fi

sleep 2
if curl -s http://localhost:5173 > /dev/null 2>&1; then
    echo -e "${GREEN}âœ“${NC} Frontend:     ${GREEN}RUNNING${NC} - http://localhost:5173"
else
    echo -e "${YELLOW}âš ${NC} Frontend:     ${YELLOW}STARTING${NC} - Wait ~10 seconds..."
fi

ps -p $CELERY_PID > /dev/null 2>&1 && \
    echo -e "${GREEN}âœ“${NC} AI Pipeline:  ${GREEN}RUNNING${NC} (PID: $CELERY_PID)" || \
    echo -e "${RED}âœ—${NC} AI Pipeline:  ${RED}FAILED${NC} - Check logs/celery.log"

redis-cli ping > /dev/null 2>&1 && \
    echo -e "${GREEN}âœ“${NC} Redis:        ${GREEN}RUNNING${NC}" || \
    echo -e "${RED}âœ—${NC} Redis:        ${RED}FAILED${NC}"

# ===================================================================
# Access Information
# ===================================================================
print_header "ðŸŽ‰ ShikshaSetu is Running!"

echo ""
echo "  Access Points:"
echo "  =============================================="
echo -e "  Frontend:     ${CYAN}http://localhost:5173${NC}"
echo -e "  Backend API:  ${CYAN}http://localhost:8000${NC}"
echo -e "  API Docs:     ${CYAN}http://localhost:8000/docs${NC}"
echo -e "  Redoc:        ${CYAN}http://localhost:8000/redoc${NC}"
echo "  =============================================="
echo ""
echo "  Logs:"
echo "  =============================================="
echo "  Backend:      tail -f logs/backend.log"
echo "  AI Pipeline:  tail -f logs/celery.log"
echo "  Frontend:     tail -f logs/frontend.log"
echo "  =============================================="
echo ""
echo -e "  ${YELLOW}Press Ctrl+C to stop all services${NC}"
echo ""

# ===================================================================
# Keep Running and Monitor
# ===================================================================
while true; do
    sleep 5
    
    # Check if services are still running
    if ! ps -p $BACKEND_PID > /dev/null 2>&1; then
        print_error "Backend stopped! Check logs/backend.log"
        cleanup
    fi
    
    if ! ps -p $CELERY_PID > /dev/null 2>&1; then
        print_error "AI Pipeline stopped! Check logs/celery.log"
        cleanup
    fi
    
    if ! ps -p $FRONTEND_PID > /dev/null 2>&1; then
        print_error "Frontend stopped! Check logs/frontend.log"
        cleanup
    fi
done
